<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="SolArduino.Controller"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10"
          vgap="10">

    <padding><Insets top="155" right="25" bottom="10" left="25"/></padding>

    <Button
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            text="up"
            onMousePressed="#buttonUp"
            onMouseReleased="#buttonUp">
    </Button>
    <Button
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            text="down"
            onMousePressed="#buttonDown"
            onMouseReleased="#buttonDown">
    </Button>
    <Button
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
            text="auto"
            onAction="#buttonAuto">
    </Button>
    <Button
            fx:id="buttonUpdate"
            GridPane.columnIndex="0"
            GridPane.rowIndex="3"
            text="update"
            onAction="#buttonUpdate">
    </Button>

    <Text
        fx:id="text"
        GridPane.columnIndex="1"
        GridPane.rowIndex="0"
        />
    <TextField
        fx:id="inputDegrees"
        GridPane.columnIndex="1"
        GridPane.rowIndex="1"
        />

    <Button
            fx:id="buttonSetAngle"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            text="set angle"
            onAction="#setAngle">
    </Button>

    <Button
            fx:id="buttonStop"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3"
            text="stop"
            onAction="#buttonStop">
    </Button>

    <ImageView
            fx:id="yay"
            GridPane.columnIndex="1"
            GridPane.rowIndex="5"
            fitHeight="150.0"
            fitWidth="200.0"
            pickOnBounds="true"
            preserveRatio="true"
            visible="false">
        <Image url="https://c2.staticflickr.com/8/7127/7552248154_978bcb1773.jpg"/>
    </ImageView>

</GridPane>